<% @page_title = 'Delete Item' %>

<%= link_to("Back to list", {:action => 'list'}) %>
<br />

<div class="item delete">
  <h2>Are you sure you want to delete this item?</h2>

  <%= render(:partial => 'item_display_table') %>


  <%= form_for(:item, :url => {:action => 'destroy', :id => @item.id}) do |f| -%>
    <p>This action cannot be undone and will permanently delete this item.</p>
    <div class="form-buttons">
      <%= submit_tag("Delete Item") %>
    </div>
  <% end %>

</div>
