<%= link_to("Back to list", {:action => 'list'}) %>
<br />

<div class="item delete">
  <h2>Are you sure you want to delete this item?</h2>

  <table summary="Item detail view">
    <tr>
      <th>Picture</th>
      <td><%= @item.picture_path %></td>
    </tr>
    <tr>
      <th>Name</th>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <th>Description</th>
      <td><%= @item.item_description %></td>
    </tr>
    <tr>
      <th>Original Owner</th>
      <td><%= @item.original_owner %></td>
    </tr>
    <tr>
      <th>Origin</th>
      <td><%= @item.origin %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @item.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @item.updated_at %></td>
    </tr>
  </table>

  <%= form_for(:item, :url => {:action => 'destroy', :id => @item.id}) do |f| -%>
    <p>This action cannot be undone and will permanently delete this item.</p>
    <div class="form-buttons">
      <%= submit_tag("Delete Item") %>
    </div>
  <% end %>

</div>
