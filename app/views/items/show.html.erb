<%= link_to("Back to list", {:action => 'list'}) %>
<br />
<%= link_to("Edit item", {:action => 'edit', :id => @item.id}) %>

<% if not flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>


<div class="item show">
  <h2>Show Item</h2>

  <table summary="Item detail view">
    <tr>
      <th>Picture</th>
      <td><%= @item.picture_path %></td>
    </tr>
    <tr>
      <th>Name</th>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <th>Description</th>
      <td><%= @item.description %></td>
    </tr>
    <tr>
      <th>Original Owner</th>
      <td><%= @item.original_owner %></td>
    </tr>
    <tr>
      <th>Origin</th>
      <td><%= @item.origin %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @item.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @item.updated_at %></td>
    </tr>
  </table>
</div>
