<%= render(:partial => 'shared/error_messages', :locals => {:object => @item}) %>

<table summary="Item form fields">
  <tr>
    <th>Item Name</th>
    <td><%= f.text_field(:name) %></td>
  </tr>
  <tr>
    <th>Origin</th>
    <td><%= f.text_field(:origin) %></td>
  </tr>
  <tr>
    <th>Owner</th>
    <td><%= f.text_field(:original_owner) %></td>
  </tr>
  <tr>
    <th>Description</th>
    <td><%= f.text_area(:description, :size => '40x10') %></td> 
  </tr>
  <tr>
    <th>Codename / URL</th>
    <td><%= f.text_field(:uid) %> </td>
  </tr>
  <tr>
    <th>Message to Next Owner</th>
    <td><%= f.text_area(:message, :size => '40x10') %> </td>
  </tr>
  <tr>
    <th>Upload Picture</th>
    <td><b>TO DO</b></td>
  </tr>
</table>
