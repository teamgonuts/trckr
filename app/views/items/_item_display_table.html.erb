
  <table summary="Item detail view">
    <tr>
      <th>Picture</th>
      <td><%= image_tag(@item.picture_path) %></td>
    </tr>
    <tr>
      <th>Name</th>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <th>Description</th>
      <td><%= @item.description %></td>
    </tr>
    <tr>
      <th>Original Owner</th>
      <td><%= @item.original_owner %></td>
    </tr>
    <tr>
      <th>Origin</th>
      <td><%= @item.origin %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @item.created_at.to_s(:long) %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @item.updated_at.to_s(:long) %></td>
    </tr>
    <tr>
      <th>Codename</th>
      <td><%= @item.uid %></td>
    </tr>
    <tr>
      <th>Message</th>
      <td><%= @item.message %></td>
    </tr>
  </table>
