<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
  "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
  <title>Tagr | <%= @page_title || 'Admin Area' %></title>
  <%= stylesheet_link_tag    'public', 'admin', :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

</head>
<body>
  <div id="header">
    <h1>Tagr Admin Area</h1>
  </div>
  <h1><%= link_to('Tagr', {:controller => 'items', :action => 'index'}) %></h1>

  <% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
  <% end %>

  <div id="content">
    <%= yield %>
  </div>

</body>
</html>
