<!DOCTYPE html>
<html>
<head>
  <title>Tagr | <%= @page_title || 'Tag.Trade.Track.' %></title>
  <%= stylesheet_link_tag    "public", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <h1><%= link_to('Tagr', {:controller => 'items', :action => 'index'}) %></h1>

  <% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
  <% end %>

  <div id="content">
    <%= yield %>
  </div>

</body>
</html>
